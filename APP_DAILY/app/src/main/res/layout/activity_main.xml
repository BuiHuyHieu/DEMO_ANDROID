<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/imgHeadLine"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/line_header"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/imgIpad"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:src="@drawable/ipad"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imgWelcome"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:layout_marginTop="-31dp"
            android:src="@drawable/img_welcome"
            tools:ignore="ContentDescription" />

    </FrameLayout>

    <TextView
        android:id="@+id/tvDaily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/lato_semi"
        android:gravity="center"
        android:text="@string/daily"
        android:textAlignment="center"
        android:textColor="#4A4747"
        android:textSize="50sp"
        android:textStyle="bold" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_marginTop="30dp"
        android:id="@+id/imgLoading"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="#00000000"
        android:src="@drawable/gif_loading" />

    <TextView
        android:layout_marginTop="80dp"
        android:id="@+id/tvBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/helveticaneue_thin"
        android:gravity="center"
        android:text="@string/we_have_a_lot_of_things_to_do_per_day"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="italic" />


</LinearLayout>